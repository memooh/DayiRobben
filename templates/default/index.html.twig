{% extends 'base.html.twig' %}

{% block title %}Xero Webshop{% endblock %}

{% block body %}

    <div class="container">

    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/5b/Insert_image_here.svg/1024px-Insert_image_here.svg.png">
            </div>
        </div>
    </div>

    <hr class="hr-black">

        <h1 class="h1-responsive">Popular Products</h1>
        <br>



        <div class="row">
            {% for product in products %}
            <div class="col-12 col-sm-8 col-md-6 col-lg-4">
                <div class="card">
                    {% for image in products.image %}
                        <td><img src="{{ vich_uploader_asset(image, 'imageFile') }}" alt="{{ product.image.imageName }}" style="width:125px;height:125px;"></td>
                    {% endfor %}
                    <div class="card-img-overlay d-flex justify-content-end">
                        <a href="#" class="card-link text-danger like">
                            <i class="fas fa-heart"></i>
                        </a>
                    </div>
                    <div class="card-body">
                        <h4 class="card-title">{{ products.name }}</h4>
                        <h6 class="card-subtitle mb-2 text-muted">Style: VA33TXRJ5</h6>
                        <p class="card-text">{{ products.description }}</p>
                        <div class="options d-flex flex-fill">
                            <select class="custom-select mr-1">
                                <option selected>Color</option>
                                <option value="1">Green</option>
                                <option value="2">Blue</option>
                                <option value="3">Red</option>
                            </select>
                        </div>
                        <div class="buy d-flex justify-content-between align-items-center">
                            <div class="price text-success"><h5 class="mt-4">${{ products.price }}</h5></div>
                            <a href="#" class="btn btn-danger mt-3"><i class="fas fa-shopping-cart"></i> Add to Cart</a>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>








    </div>
{% endblock %}
