{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="container">

<form method="post" action="{{ path("fos_user_security_check") }}" class="form-signin">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <label for="inputEmail" class="sr-only">{{ 'security.login.username'|trans }}</label>
    <input type="text" id="inputEmail" name="_username" value="{{ last_username }}" class="form-control" placeholder="Email address" required autofocus>

    <label for="inputPassword" class="sr-only">{{ 'security.login.password'|trans }}</label>
    <input type="password" id="inputPassword" name="_password" class="form-control" placeholder="Password" required>
    <div class="checkbox mb-3">
        <label>
            <input type="checkbox" name="_remember_me" value="on">     {{ 'security.login.remember_me'|trans }}
        </label>
    </div>
    <input class="btn btn-lg btn-primary btn-block" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
    <p class="mt-5 mb-3 text-muted">&copy; 2017-2018</p>
</form>
</div>